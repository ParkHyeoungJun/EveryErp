<script src="/resources/js/blockUI.js"></script>
<script>
	$(document).ready(function() {
		$("#btnwriter").on("click", function() {
			$(this).blockUI({
				    //html태그를 문자열로 적용해도 무관합니다.
				    //message : "<table><tr><td>테스트테스트</td></tr></table>"
				    message : $('#modal')
				    //css설정
				    ,css : {
				     width : '500px',
				     height : '300px'
				    }
				    //모달창 외부 클릭시 닫기
				    ,onOverlayClick : $.unblockUI
				   }); //$.blockUI

		});
	});
</script>


