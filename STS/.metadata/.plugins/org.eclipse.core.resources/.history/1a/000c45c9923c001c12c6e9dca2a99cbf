<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.erp.mapper.BoardMapper">

	<resultMap type="kr.erp.model.BoardVO" id="BoardMap">
		<id property="num" column="num" />
		<result property="parentnum" column="PARENT_NUM" />
		<result property="depth" column="depth" />
		<result property="title" column="title" />
		<result property="content" column="content" jdbcType="BLOB" />
		<result property="writer" column="writer" />
		<result property="register" column="register" />
		<result property="updatedate" column="updatedate" />
		<result property="ip" column="ip" />
		<result property="cnt" column="cnt" />
	</resultMap>

	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item="type" collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%#{keyword}%'
						</when>
						<when test="type=='C'.toString()">
							content like '%#{keyword}%'
						</when>
						<when test="type=='W'.toString()">
							writer like '%#{keyword}%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<insert id="insert">
		insert into tbl_board
		(
		NUM
		,PARENT_NUM
		,DEPTH
		,TITLE
		,CONTENT
		,WRITER
		,ip
		,REGISTER
		)
		values
		(
		board_seq.nextval
		,0
		,0
		,#{title}
		,#{content,jdbcType=LONGVARBINARY}
		,#{writer}
		,#{ip}
		,sysdate
		)
	</insert>

	<insert id="reply">
		insert into tbl_board
		(
		NUM
		,PARENT_NUM
		,DEPTH
		,TITLE
		,CONTENT
		,WRITER
		,ip
		,REGISTER
		)
		values
		(
		board_seq.nextval
		,#{parentnum}
		,#{depth}
		,#{title}
		,#{content}
		,#{writer}
		,#{ip}
		,sysdate
		)
	</insert>
	<delete id="delete">
		delete tbl_board where num=#{num}
	</delete>
	<update id="update">
		update tbl_board set
		title=#{title},
		content=#{content},
		ip = #{ip},
		updateDate=sysdate
		where num=#{num}
	</update>
	<select id="read" resultMap="BoardMap">
		select * from tbl_board where
		num=#{num}
	</select>
	<select id="getListWithPaging" resultMap="BoardMap">
	<![CDATA[
		Select * from
		(
		SELECT
		/*+INDEX_DESC(tbl_board pk_board) */
		num,
		parent_num,
		depth,
		title,
		content,
		writer,
		register,
		ip,
		updatedate,
		(Select count(1) from TBL_BOARD Where 1=1
			]]>
		<include refid="criteria" />
		<![CDATA[
		 ) as cnt,
		rownum rn
		FROM TBL_BOARD
		Where 
		]]>

		<include refid="criteria" />
	
	<![CDATA[
	rownum <= #{pageNum} * #{amount}
		START WITH depth=0
		CONNECT BY PRIOR num = parent_num
		ORDER SIBLINGS BY num DESC
		)
			where rn > (#{pageNum}-1) * #{amount}
	]]>

	</select>

	<update id="updateReplyCnt">
		update tbl_board set replycnt=replycnt + #{amount}
		where bno=#{bno}
	</update>
</mapper>