<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.erp.mapper.ReplyMapper">

	<resultMap type="kr.erp.model.ReplyVO" id="ReplyMap">
		<id property="idx" column="idx" />
		<result property="num" column="num" />
		<result property="reply" column="reply" />
		<result property="replyer" column="replyer" />
		<result property="replydate" column="replydate"  />
		<result property="updatedate" column="updatedate" />
		<result property="cnt" column="cnt" />
	</resultMap>

	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item="type" collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type=='C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type=='W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<insert id="register">
		insert into tbl_Reply
		(
		idx
		,num
		,reply
		,replyer
		,replydate
		)
		values
		(
		reply_seq.nextval
		,#{num}
		,#{reply}
		,#{replyer}
		,sysdate
		)
	</insert>

	
	<delete id="remove">
		delete tbl_Reply where idx=#{idx}
	</delete>
	<update id="modify">
		update tbl_Reply set
		reply=#{reply}
		,replyer =#{replyer}
		,updatedate= sysdate
		where idx=#{idx}
	</update>
	<select id="get" resultMap="ReplyMap">
		select * from tbl_Reply where
		idx=#{idx}
	</select>
	
	<select id="getListWithPaging"  resultMap="ReplyMap">
	<![CDATA[
		Select * from
		(
		SELECT
		/*+INDEX_DESC(tbl_Reply pk_Reply) */
		idx,
		num,
		reply,
		replyer,
		replydate,
		updatedate,
		(Select count(1) from tbl_Reply Where num = #{num}
		 ) as cnt,
		rownum rn
		FROM tbl_Reply
		Where 
	rownum <= #{pageNum} * #{amount}
	and num = #{num}
		)
			where rn > (#{pageNum}-1) * #{amount}
	]]>

	</select>


</mapper>